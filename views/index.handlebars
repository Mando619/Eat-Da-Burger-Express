<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <img src="/assets/img/cheeseburger.jpg" alt="cheese-burger" class="burger">
            <h1>Eat-Da-Burrrrger</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 text-center" class="burger-display">
            <div class="row">
                  {{#each burger_data}}
			  	{{#unless this.devoured}}
                  <div class="col-xs-9 text-center">
                      <pre>
                          {{this.id}} {{this.burger_name}}
                      </pre>
                  </div>
                  <div class="col-xs-3 text-center">
                      <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
						<input input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>

                  </div>
            <	{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-xs-6 text-center" class="task">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} {{this.burger_name}}">
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/burgers/post" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Enter a burger you would like to eat. Click the "Submit" button.</p>
		</div>
	</div>
</div>